{
  "name": "back-end",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=${NODE_ENV:-development} node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "test": "USE_MOCK_DB=true mocha",
    "coverage": "USE_MOCK_DB=true c8 --include='routes/**' --include='utils/**' --include='index.js' --reporter=text --reporter=html mocha",
    "verify:integrity": "node scripts/verifyIntegrity.js",
    "verify:parity": "node scripts/verifyDataParity.js"
  },
  "c8": {
    "include": [
      "routes/**",
      "utils/**",
      "index.js"
    ],
    "exclude": [
      "test/**",
      "data/**",
      "coverage/**",
      "node_modules/**"
    ],
    "reporter": [
      "text",
      "html",
      "json-summary"
    ],
    "all": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "axios": "^1.5.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "jsdom": "^22.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^4.5.0",
    "chai-http": "^4.4.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "sinon": "^21.0.0"
  },
  "node": ">=20.0.0"
}
