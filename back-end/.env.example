# Server Configuration
PORT=7001
NODE_ENV=development

# Database Configuration
# MongoDB Atlas (Cloud) - REQUIRED for production
MONGODB_URI=this-is-an-example-monogodb-uri

# Database Mode
# Set to 'true' to use mock data (for testing without MongoDB)
# Set to 'false' to use MongoDB (default for development/production)
USE_MOCK_DB=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters-long
# IMPORTANT: Change this to a secure random string in production (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# Front-End URL (for CORS)
FRONTEND_URL=http://localhost:7002

# ML Service URL (Python FastAPI service)
ML_SERVICE_URL=http://localhost:8001
